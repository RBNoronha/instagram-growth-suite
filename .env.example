# ============================================
# CONFIGURAÇÕES DO INSTAGRAM
# ============================================

# Credenciais (OBRIGATÓRIO)
IG_USERNAME=seu_usuario_aqui
IG_PASSWORD=sua_senha_aqui

# ============================================
# CONFIGURAÇÕES DE SEGURANÇA
# ============================================

# Modo headless (True = sem interface gráfica)
HEADLESS_MODE=False

# Delay entre ações (segundos)
MIN_DELAY=2.0
MAX_DELAY=5.0

# Limites de ações por hora
MAX_LIKES_PER_HOUR=30
MAX_FOLLOWS_PER_HOUR=20
MAX_UNFOLLOWS_PER_HOUR=25
MAX_COMMENTS_PER_HOUR=8

# Limites diários
MAX_ACTIONS_PER_DAY=400

# ============================================
# CONFIGURAÇÕES DE CONTEÚDO
# ============================================

# Pasta de imagens para postagem
CONTENT_FOLDER=./content/images

# Posts por dia
POSTS_PER_DAY=2

# Horários padrão de postagem (se não usar analytics)
DEFAULT_POST_HOURS=9,19

# ============================================
# CONFIGURAÇÕES DE CRESCIMENTO
# ============================================

# Hashtags alvo (separadas por vírgula)
TARGET_HASHTAGS=tecnologia,programacao,developer,python,coding

# Influenciadores alvo (separados por vírgula)
TARGET_INFLUENCERS=programador.tv,codigofonte.tv

# Concorrentes alvo (separados por vírgula)
TARGET_COMPETITORS=

# ============================================
# CONFIGURAÇÕES AVANÇADAS
# ============================================

# User agent personalizado (deixe em branco para automático)
CUSTOM_USER_AGENT=

# Proxy (formato: http://usuario:senha@host:porta)
PROXY_URL=

# Timeout do navegador (segundos)
BROWSER_TIMEOUT=30

# Modo de debug (True = mais logs)
DEBUG_MODE=False
